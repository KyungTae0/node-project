{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "lib": [
      "ES2024"
    ],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "incremental": false,
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@posts/*": [
        "domains/posts/*"
      ],
      "@post/*": [
        "domains/post/*"
      ],
      "@comment/*": [
        "domains/comment/*"
      ],
      "@keywordAlert/*": [
        "domains/keywordAlert/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "*": [
        "*"
      ],
      "@user/*": [
        "domains/user/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}